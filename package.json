{
  "name": "ctrlplus",
  "version": "0.1.2",
  "private": true,
  "description": "Subdomain-based multi-tenant Next.js platform for vehicle wrap operations.",
  "engines": {
    "node": ">=20.9.0"
  },
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "node .codex/scripts/fix-playwright-node24.mjs && playwright test",
    "bootstrap:github": "node .codex/scripts/bootstrap-governance.mjs",
    "bootstrap:labels": "node .codex/scripts/bootstrap-governance.mjs --labels-only",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "bootstrap:issues": "node .codex/scripts/bootstrap-governance.mjs --issues-only --project-only",
    "bootstrap:github:dry-run": "node .codex/scripts/bootstrap-governance.mjs --dry-run --verbose",
    "db:generate": "prisma generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@base-ui/react": "^1.2.0",
    "@clerk/nextjs": "6.38.3",
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/modifiers": "^9.0.0",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@hookform/resolvers": "^5.2.2",
    "@neondatabase/serverless": "^1.0.1",
    "@prisma/adapter-neon": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@tabler/icons-react": "^3.37.1",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "date-fns": "^4.1.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "lucide-react": "^0.575.0",
    "next": "16.1.6",
    "next-themes": "^0.4.6",
    "radix-ui": "^1.4.3",
    "react": "19.2.4",
    "react-day-picker": "^9.14.0",
    "react-dom": "19.2.4",
    "react-hook-form": "^7.71.2",
    "react-resizable-panels": "^4.7.0",
    "recharts": "2.15.4",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.5.0",
    "vaul": "^1.1.2",
    "ws": "^8.18.3",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "1.58.2",
    "@tailwindcss/postcss": "4.2.1",
    "@types/node": "25.3.2",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "8.56.1",
    "@typescript-eslint/parser": "8.56.1",
    "eslint": "10.0.2",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "postcss": "8.5.6",
    "prettier": "3.8.1",
    "prisma": "^7.0.0",
    "shadcn": "^3.8.5",
    "tailwindcss": "4.2.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --max-warnings=0 --cache --cache-location .cache/eslint --fix"
    ]
  }
}
