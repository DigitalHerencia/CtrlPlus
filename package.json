{
  "name": "ctrlplus",
  "version": "0.1.0",
  "private": true,
  "description": "Subdomain-based multi-tenant Next.js platform for vehicle wrap operations.",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "bootstrap:github": "node scripts/github/bootstrap-governance.mjs",
    "bootstrap:labels": "node scripts/github/bootstrap-governance.mjs --labels-only",
    "prepare": "husky",
    "lint-staged": "lint-staged"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.38.0",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "25.2.3",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.56.0",
    "@typescript-eslint/parser": "8.56.0",
    "eslint": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --max-warnings=0"
    ]
  }
}
