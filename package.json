{
  "name": "ctrlplus",
  "version": "0.1.2",
  "private": true,
  "description": "Subdomain-based multi-tenant Next.js platform for vehicle wrap operations.",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --max-warnings=0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "bootstrap:github": "node scripts/github/bootstrap-governance.mjs",
    "bootstrap:labels": "node scripts/github/bootstrap-governance.mjs --labels-only",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "bootstrap:issues": "node scripts/github/bootstrap-governance.mjs --issues-only --project-only",
    "bootstrap:github:dry-run": "node scripts/github/bootstrap-governance.mjs --dry-run --verbose"
  },
  "dependencies": {
    "@clerk/nextjs": "6.38.0",
    "next": "16.1.6",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@playwright/test": "1.58.2",
    "@tailwindcss/postcss": "4.2.0",
    "@types/node": "25.3.0",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@typescript-eslint/eslint-plugin": "8.56.0",
    "@typescript-eslint/parser": "8.56.0",
    "eslint": "10.0.0",
    "eslint-config-prettier": "10.1.8",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "postcss": "8.5.6",
    "tailwindcss": "4.2.0",
    "typescript": "5.9.3",
    "vitest": "4.0.18"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": [
      "eslint --max-warnings=0 --cache --cache-location .cache/eslint --fix"
    ]
  }
}
