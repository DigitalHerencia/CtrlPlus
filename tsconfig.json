{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vitest/globals"],
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.mts",
    "**/*.cts"
  ],
  "exclude": ["node_modules", "dist"]
}
