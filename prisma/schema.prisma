generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DATABASE_URL_UNPOOLED")
}

model Tenant {
  id            String         @id @default(cuid())
  slug          String         @unique
  name          String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  users         User[]
  tenantMemberships TenantUserMembership[]
  clerkWebhookEvents ClerkWebhookEvent[]
  wrapDesigns   WrapDesign[]
  bookings      Booking[]
  invoices      Invoice[]
  uploads       Upload[]
  paymentEvents PaymentEvent[]
}

model User {
  id        String   @id @default(cuid())
  tenantId  String
  email     String
  role      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, email])
  @@index([tenantId])
}

model WrapDesign {
  id          String   @id @default(cuid())
  tenantId    String
  name        String
  description String?
  priceCents  Int      @default(0)
  isPublished Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  tenant      Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, name])
  @@index([tenantId])
}

model Booking {
  id           String   @id @default(cuid())
  tenantId     String
  customerName String
  startsAt     DateTime
  endsAt       DateTime
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  tenant       Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, startsAt, endsAt])
}

model Invoice {
  id                      String   @id @default(cuid())
  tenantId                String
  bookingId               String?
  customerEmail           String
  amountCents             Int
  status                  String   @default("draft")
  stripeCheckoutSessionId String?
  stripePaymentIntentId   String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
  tenant                  Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, bookingId])
}


model Upload {
  id         String   @id @default(cuid())
  tenantId   String
  fileName   String
  mimeType   String
  byteLength Int
  checksum   String
  storageUrl String
  createdAt  DateTime @default(now())
  tenant     Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
}

model PaymentEvent {
  id            String   @id @default(cuid())
  tenantId      String
  stripeEventId String   @unique
  eventType     String
  processedAt   DateTime @default(now())
  tenant        Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([tenantId, eventType])
}

model ClerkUser {
  id                String                 @id
  primaryEmail      String?
  firstName         String?
  lastName          String?
  imageUrl          String?
  isDeleted         Boolean                @default(false)
  lastSyncedAt      DateTime               @default(now())
  createdAt         DateTime               @default(now())
  updatedAt         DateTime               @updatedAt
  tenantMemberships TenantUserMembership[]
  webhookEvents     ClerkWebhookEvent[]

  @@index([primaryEmail])
  @@index([isDeleted, updatedAt])
}

model TenantUserMembership {
  id          String    @id @default(cuid())
  tenantId    String
  clerkUserId String
  role        String
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  tenant      Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  clerkUser   ClerkUser @relation(fields: [clerkUserId], references: [id], onDelete: Cascade)

  @@unique([tenantId, clerkUserId])
  @@index([tenantId, isActive])
  @@index([tenantId, role, isActive])
  @@index([clerkUserId, isActive])
}

model ClerkWebhookEvent {
  id              String    @id @default(cuid())
  clerkEventId    String    @unique
  eventType       String
  clerkUserId     String?
  tenantId        String?
  payloadChecksum String
  status          String    @default("received")
  receivedAt      DateTime  @default(now())
  processedAt     DateTime?
  clerkUser       ClerkUser? @relation(fields: [clerkUserId], references: [id], onDelete: SetNull)
  tenant          Tenant?    @relation(fields: [tenantId], references: [id], onDelete: SetNull)

  @@index([eventType, receivedAt])
  @@index([tenantId, receivedAt])
  @@index([clerkUserId, receivedAt])
}
